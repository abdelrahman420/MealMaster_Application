<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#F0F0F0"
    tools:context=".view.fragments.search.SearchFragment">

    <Button
        android:id="@+id/button_search_by_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search by Name"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#3700B3"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:elevation="4dp" />

    <Button
        android:id="@+id/button_filter_by_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter by Ingredient"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#3700B3"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:elevation="4dp" />

    <Button
        android:id="@+id/button_filter_by_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter by Country"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#3700B3"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:elevation="4dp" />

    <Button
        android:id="@+id/button_filter_by_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter by Category"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#3700B3"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:elevation="4dp" />

</LinearLayout>
